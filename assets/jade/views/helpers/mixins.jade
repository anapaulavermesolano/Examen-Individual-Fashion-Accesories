	i.fa.fa-star-o
mixin money()
	p.subdolar $218.00
mixin moneytwo()
	p
		s.display-block $242.00
	p.subdolar.display-block $218.00

mixin clothingimg(clothingimg)
	case clothingimg
		when "imga"
			+botonsalenew()
			img.img-responsive.img-thumbnail(src="assets/images/a2.jpg")
		when "imgb"
			+botonnew()
			img.img-responsive.img-thumbnail(src="assets/images/d2.jpg")
		when "imgc"
			img.img-responsive.img-thumbnail(src="assets/images/g2.jpg")
		when "imgd"
			+botonnew()
			img.img-responsive.img-thumbnail(src="assets/images/c2.jpg")
		when "imge"
			+botonsale()
			img.img-responsive.img-thumbnail(src="assets/images/f2.jpg")
		when "imgf"
			+botonnew()
			img.img-responsive.img-thumbnail(src="assets/images/e2.jpg")

