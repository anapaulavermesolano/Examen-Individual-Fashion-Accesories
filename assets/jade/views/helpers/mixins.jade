mixin catalogos(originalLink, name, dolar)
	.media
		.media-left
			a(href="#")
				img.media-object(src="#{originalLink}")
		.media-body
			h4.media-heading= name
			p.dolar= dolar
				i.fa.fa-times
mixin suttotal(subname, subdolar)
	.row
		.col-xs-6
			p.subname= subname
		.col-xs-6
			p.subdolar= subdolar
mixin latestimg(latestimg)
	case latestimg
		when "img1"
			img.img-responsive(src="assets/images/a1.jpg")
		when "img2"
			img.img-responsive(src="assets/images/b1.jpg")
		when "img3"
			img.img-responsive(src="assets/images/c1.jpg")
		when "img4"
			img.img-responsive(src="assets/images/d1.jpg")
