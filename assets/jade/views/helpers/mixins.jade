
mixin btn-group(namefa, name)
	.btn-group
		button.btn.btn-default.btn-sm.dropdown-toggle(type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")
			p
				i(class='fa fa-'+namefa) &nbsp;
				= name 
				span.caret
		ul.dropdown-menu
			li
				a(href="#") France
			li
				a(href="#") English

mixin slider1(imgslider,imgslider2)
	.carousel-inner(role="listbox")
